<body>

  <header class="navbar navbar-expand-sm">
    <a class="navbar-brand" href="/">JSL Web</a>

    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <%if(!req.isAuthenticated()) { %>
          <form action="/auth/discord" method="GET">
          <button class="btn btn-block btn-social btn-discord" type="submit">
            <i class="fab fa-discord"></i>
            Login with Discord
          </button>
          </form>
          <!-- <a class="btn btn-block btn-social btn-discord" href="/auth/discord" role="button">
            <i class="fab fa-discord"></i>
            Login with Discord
          </a> -->
        <% } else { %>
          <div class="nav-item">
            <img src= <%= req.user.picture %> class="profile rounded-circle nav-item" alt="profile_pic">
            <p class="nav-item"> <%= req.user.displayName %> </p>
          </div>
          <a href="/logout"><i class="fas fa-sign-out-alt fa-lg nav-item"></i></a>
        <% } %>
      </li>
    </ul>

  </header>